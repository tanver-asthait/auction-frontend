@import '../../../styles/variables';
@import '../../../styles/mixins';
@import '../../../styles/animations';

.admin-dashboard {
  @extend .dashboard-container;

  .dashboard-header {
    @include dashboard-header;

    .header-info {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      gap: $spacing-sm;

      .current-time {
        font-size: 1.1rem;
        color: $text-muted;
      }
    }
  }

  .dashboard-grid {
    @include dashboard-grid;
  }

  .dashboard-card {
    @include glass-card;
    padding: $spacing-lg;

    .card-header {
      @include card-header;
    }
  }

  // Timer Card - Component Specific
  .timer-card {
    text-align: center;

    &.running {
      background: linear-gradient(135deg, rgba($success-color, 0.2), rgba($success-color, 0.1));
      border-color: $success-color;
    }

    &.pulse {
      animation: cardPulse 0.3s ease;
    }

    .timer-display {
      font-size: 4rem;
      font-weight: 700;
      margin: 20px 0;
      font-family: 'Courier New', monospace;
      text-shadow: 0 0 20px currentColor;
    }
  }

  // Current Player Card
  .current-player-card {
    .player-info {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;

      .player-image {
        width: 100px;
        height: 100px;
        margin-bottom: $spacing-md;
        border-radius: 50%;
        border: 3px solid rgba(255, 255, 255, 0.3);

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
        }
      }

      .player-name {
        font-size: 1.5rem;
        font-weight: 700;
        margin: 0 0 12px 0;
      }

      .position-badge {
        padding: 4px 8px;
        border-radius: $radius-md;
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: uppercase;

        &.position-goal-keeper { background: rgba($warning-color, 0.3); color: $warning-color; }
        &.position-defender { background: rgba($info-color, 0.3); color: $info-color; }
        &.position-midfielder { background: rgba($success-color, 0.3); color: $success-color; }
        &.position-forward { background: rgba($danger-color, 0.3); color: $danger-color; }
      }
    }
  }

  // Bidding Card
  .bidding-card {
    &.new-bid {
      animation: newBidGlow 0.6s ease;
    }

    .bidding-content {
      text-align: center;

      .bid-amount {
        font-size: 2.5rem;
        font-weight: 700;
        color: $warning-color;
        text-shadow: 0 0 20px rgba($warning-color, 0.5);
      }

      .bid-team {
        font-size: 1.2rem;
        color: $text-muted;
        margin-top: $spacing-sm;
      }
    }
  }

  // Stats Card
  .stats-card {
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: $spacing-md;

      .stat-item {
        text-align: center;
        padding: 12px;
        border-radius: $radius-md;
        background: rgba(255, 255, 255, 0.1);

        .stat-value {
          font-size: 1.8rem;
          font-weight: 700;
          margin-bottom: 4px;
        }

        .stat-label {
          font-size: 0.8rem;
          color: $text-muted;
          text-transform: uppercase;
        }

        &.sold .stat-value { color: $success-color; }
        &.remaining .stat-value { color: $warning-color; }
      }
    }
  }

  // Control Panel
  .control-panel {
    @include glass-card($blur: 10px, $opacity: 0.1);
    padding: 30px;
    margin-top: 20px;

    .control-buttons {
      display: flex;
      justify-content: center;
      gap: 20px;
      flex-wrap: wrap;

      .control-btn {
        @include button-primary;
        padding: 16px 32px;
        font-size: 1.1rem;
        box-shadow: $shadow-lg;

        &.start-btn { background: linear-gradient(45deg, $success-color, $success-light); }
        &.sell-btn { background: linear-gradient(45deg, $warning-color, #fd7e14); }
        &.next-btn { background: linear-gradient(45deg, $info-color, $primary-color); }
      }
    }
  }

  // Last Sold Info Banner
  .last-sold-info {
    background-color: rgba($success-light, 0.1);
    padding: $spacing-md;
    border-radius: $radius-md;
    margin-bottom: $spacing-md;
    border: 1px solid rgba($success-light, 0.3);
  }

  // Responsive
  @include mobile {
    .dashboard-grid {
      grid-template-columns: 1fr;
    }

    .control-panel .control-buttons {
      flex-direction: column;
    }
  }

  @keyframes newBidGlow {
    0%, 100% { box-shadow: $shadow-lg; }
    50% { box-shadow: 0 8px 32px rgba($warning-color, 0.4), 0 0 20px rgba($warning-color, 0.3); }
  }
}
